<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/gplaypattern"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@mipmap/gplaypattern"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="Registration"
            android:id="@+id/registrationtextView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Please Enter your Name"
            android:id="@+id/nametextView"
            android:layout_marginTop="48dp"
            android:layout_below="@+id/registrationtextView"
            android:layout_centerHorizontal="true" />
        <EditText
            android:id="@+id/users_name"
            android:layout_width="fill_parent"
            android:paddingLeft="50dp"
            android:layout_height="wrap_content"
            android:hint="                     Name here"
            android:inputType="text"
            android:layout_below="@+id/nametextView"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="          What Is Your Date of Birth?"
            android:id="@+id/textView"

            android:layout_marginTop="31dp"
            android:layout_below="@+id/users_name"
            android:layout_alignStart="@+id/allergytextView" />

        <EditText
            android:id="@+id/dateEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:hint="@string/set_bdate"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="What Is Your Gender?"
            android:id="@+id/gendertextView"
            android:layout_marginTop="43dp"
            android:layout_below="@+id/dateEdit"
            android:layout_centerHorizontal="true" />
        <Spinner
            android:id = "@+id/genderspinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/gender_array"
            android:prompt="@string/gender_prompt"
            android:layout_below="@+id/gendertextView"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text = "Continue"
            android:background="@color/foodmeister_green"
            android:clickable="true"
            android:height="10dp"
            android:layout_below="@+id/genderspinner"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="44dp"
            android:layout_marginBottom="15dp"
            android:onClick="registerNewAccount"/>


    </RelativeLayout>



</ScrollView>