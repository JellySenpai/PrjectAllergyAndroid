<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/gplaypattern"
    android:weightSum="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Registration"
        android:id="@+id/registrationtextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Please Enter your Name"
        android:id="@+id/nametextView"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/registrationtextView"
        android:layout_centerHorizontal="true" />
    <EditText
        android:id="@+id/email_address"
        android:layout_width="fill_parent"
        android:paddingLeft="50dp"
        android:layout_height="wrap_content"
        android:hint="                     Name here"
        android:inputType="text"
        android:layout_below="@+id/nametextView"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/etxt_fromdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:hint="@string/set_bdate"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="What Is Your Gender?"
        android:id="@+id/gendertextView"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/etxt_fromdate"
        android:layout_centerHorizontal="true" />
    <!--<Spinner
        android:id = "@+id/genderspinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/gender_array"
        android:prompt="@string/gender_prompt"
        android:layout_below="@+id/gendertextView"
        android:layout_marginTop="20dp"
        android:layout_alignEnd="@+id/btnSubmit"

        android:layout_alignStart="@+id/btnSubmit" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="How many other users are there?"
        android:id="@+id/userProftextView"
        android:layout_above="@+id/btnSubmit"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/allergy_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/btnSubmit"
        android:layout_alignParentStart="true"/>

    <Button
        android:id = "@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:text = "Submit"
        android:background="#ca1c1c"
        android:clickable="true"
        android:height="10dp"
        android:layout_above="@+id/userspinner"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id = "@+id/userspinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/profile_array"
        android:prompt="@string/gender_prompt"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Please select all your allergies?"
        android:id="@+id/allergytextView"
        android:layout_alignTop="@+id/allergy_list"
        android:layout_alignEnd="@+id/userProftextView" />
</RelativeLayout>