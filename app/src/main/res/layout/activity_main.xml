<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/foodmeisterback"
    tools:context="com.uat.foodmeister.RegistrationActivity">

    <Button
        android:text="Create New Account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/createButton"
        android:onClick="registerNewAccount"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="@color/white"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/switch7"
        android:layout_alignEnd="@+id/switch7"
        android:layout_marginTop="27dp"
        android:id="@+id/users_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:background="@color/white"
        android:ems="10"
        android:id="@+id/emailEntry"
        android:layout_alignBaseline="@+id/emailView"
        android:layout_alignBottom="@+id/emailView"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/users_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/setUpText"
        android:text="Set Up Account Profile"
        android:layout_below="@+id/emailEntry"
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />

    <TextView
        android:text="Birthdate: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setUpText"
        android:layout_marginTop="18dp"
        android:id="@+id/bDayView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:background="@color/white"
        android:ems="10"
        android:id="@+id/bDayText"
        android:layout_alignBaseline="@+id/bDayView"
        android:layout_alignBottom="@+id/bDayView"
        android:layout_alignLeft="@+id/setUpText"
        android:layout_alignStart="@+id/setUpText"
        android:onClick="showMeDates"
        android:clickable="true"
        android:text=""/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:background="#FFFFFF"
        android:entries="@array/gender_array"
        android:ems="10"
        android:layout_below="@+id/bDayText"
        android:layout_alignRight="@+id/bDayText"
        android:layout_alignEnd="@+id/bDayText"
        android:id="@+id/genderEntry" />

    <Switch
        android:text="Milk: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch12"
        android:layout_above="@+id/switch10"
        android:layout_alignRight="@+id/switch10"
        android:layout_alignEnd="@+id/switch10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General Account Information"
        android:textSize="20sp"
        android:textIsSelectable="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView8" />

    <TextView
        android:text="Email: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/emailView"
        android:layout_below="@+id/users_name"
        android:layout_toLeftOf="@+id/emailEntry"
        android:layout_toStartOf="@+id/emailEntry" />

    <TextView
        android:text="Gender: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/genderspinner"
        android:layout_alignBaseline="@+id/genderEntry"
        android:layout_alignBottom="@+id/genderEntry"
        android:layout_toStartOf="@+id/switch12"
        android:layout_alignRight="@+id/bDayView"
        android:layout_alignEnd="@+id/bDayView" />

    <Switch
        android:text="Wheat: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch8"
        android:layout_above="@+id/switch6"
        android:layout_alignRight="@+id/switch6"
        android:layout_alignEnd="@+id/switch6" />

    <Switch
        android:text="Shellfish: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch7"
        android:layout_below="@+id/switch9"
        android:layout_alignLeft="@+id/switch11"
        android:layout_alignStart="@+id/switch11" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch10"
        android:text="Egg: "
        android:layout_above="@+id/switch8"
        android:layout_alignLeft="@+id/bDayText"
        android:layout_alignStart="@+id/bDayText"
        android:layout_alignTop="@+id/switch11" />

    <Switch
        android:text="Fish: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch9"
        android:layout_below="@+id/switch11"
        android:layout_alignRight="@+id/genderEntry"
        android:layout_alignEnd="@+id/genderEntry" />

    <Switch
        android:text="Soy: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch11"
        android:layout_above="@+id/switch8"
        android:layout_alignRight="@+id/switch9"
        android:layout_alignEnd="@+id/switch9" />

    <Switch
        android:text="Peanut: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch13"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/switch11"
        android:layout_alignStart="@+id/switch11" />

    <Switch
        android:text="Tree Nuts: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:id="@+id/switch6"
        android:layout_above="@+id/createButton"
        android:layout_alignRight="@+id/switch10"
        android:layout_alignEnd="@+id/switch10" />

    <TextView
        android:text="Allergies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="24sp"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/switch12"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/users_name"
        android:layout_toLeftOf="@+id/users_name"
        android:layout_toStartOf="@+id/users_name"
        android:layout_marginTop="12dp"
        android:id="@+id/textView9" />

</RelativeLayout>
